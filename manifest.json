{
	"manifest_version": 3,
	"name": "Payana CEP",
	"version": "1.0.0",
	"description": "CEP Banxico integration for Payana transaction details",
	"permissions": ["activeTab"],
	"content_scripts": [
		{
			"matches": ["https://app.payana.cloud/transactions/detail/*"],
			"js": ["content.js"],
			"run_at": "document_idle"
		}
	],
	"icons": {
		"16": "icons/icon.png",
		"48": "icons/icon.png",
		"128": "icons/icon.png"
	}
}
